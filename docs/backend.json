{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Represents a user's profile information.",
      "properties": {
        "id": { "type": "string", "description": "Unique user ID, same as Firebase Auth UID." },
        "name": { "type": "string", "description": "The user's full name." },
        "email": { "type": "string", "description": "The user's email address.", "format": "email" },
        "phoneNumber": { "type": "string", "description": "The user's phone number." },
        "role": {
          "type": "string",
          "description": "The role of the user in the system.",
          "enum": ["Customer", "Operator"]
        }
      },
      "required": ["id", "name", "email", "role"]
    },
    "MenuItem": {
        "title": "Menu Item",
        "type": "object",
        "description": "A single item available on the canteen menu.",
        "properties": {
            "id": { "type": "string" },
            "name": { "type": "string" },
            "description": { "type": "string" },
            "price": { "type": "number" },
            "isAvailable": { "type": "boolean" },
            "imageId": { "type": "string" }
        },
        "required": ["name", "description", "price", "isAvailable", "imageId"]
    },
    "Order": {
        "title": "Order",
        "type": "object",
        "description": "A customer's order.",
        "properties": {
            "id": { "type": "string" },
            "customerName": { "type": "string" },
            "customerId": { "type": "string" },
            "items": { 
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "menuItemId": { "type": "string" },
                        "name": { "type": "string" },
                        "quantity": { "type": "number" },
                        "price": { "type": "number" }
                    },
                    "required": ["menuItemId", "name", "quantity", "price"]
                }
            },
            "total": { "type": "number" },
            "status": { "type": "string" },
            "paymentMethod": { "type": "string" },
            "paymentStatus": { "type": "string" },
            "qrCode": { "type": "string" },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["customerName", "customerId", "items", "total", "status", "paymentMethod", "paymentStatus", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "emailPassword"
    ]
  },
  "firestore": {
    "users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public profiles for all users."
    },
    "menu_items/{menuItemId}": {
        "schema": { "$ref": "#/entities/MenuItem" },
        "description": "Stores all menu items for the canteen."
    },
    "orders/{orderId}": {
        "schema": { "$ref": "#/entities/Order" },
        "description": "Stores all customer orders."
    }
  }
}
