rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is an Operator
    function isOperator() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Operator';
    }

    // Helper function to check if the user is the owner of a document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Allow users to read and update their own profile.
      allow read, update: if isOwner(userId);
      // Allow new users to create their profile.
      allow create: if request.auth != null;
    }

    // Menu items collection
    match /menu_items/{menuItemId} {
      // Anyone can read and list the menu
      allow get, list: if true;
      // Only operators can create, update, or delete menu items.
      allow write: if isOperator();
    }

    // Orders collection
    match /orders/{orderId} {
      // Customers can create their own orders
      allow create: if request.auth != null && request.resource.data.customerId == request.auth.uid;
      // Customers can read their own orders, operators can read any order.
      allow read: if (isOwner(resource.data.customerId) || isOperator());
      // Operators can update any order, customers can only update their own order if it hasn't been processed yet.
      allow update: if isOperator() || (isOwner(resource.data.customerId) && resource.data.status == 'Payment Awaiting Acceptance');
      // Only operators can delete orders (or consider not allowing deletes)
      allow delete: if isOperator();
    }
  }
}
